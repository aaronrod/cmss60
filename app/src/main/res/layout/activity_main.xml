<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.cmss60.core.MainActivity">

    <TextView
        android:text="@string/routing_title"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson 0 - Activity Lifecycle"
        android:id="@+id/lesson0Button"
        android:onClick="clickLesson0"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson 1 - YouTube"
        android:id="@+id/lesson1Button"
        android:onClick="clickLesson1"
        android:layout_below="@+id/lesson0Button"
        android:layout_alignEnd="@+id/lesson0Button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson 2 - Browser"
        android:id="@+id/lesson2Button"
        android:onClick="clickLesson2"
        android:layout_below="@+id/lesson1Button"
        android:layout_alignEnd="@+id/lesson1Button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson 3 - Video Player"
        android:id="@+id/lesson3Button"
        android:onClick="clickLesson3"
        android:layout_below="@+id/lesson2Button"
        android:layout_alignEnd="@+id/lesson2Button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson 4 - JavaScript Interface"
        android:id="@+id/lesson4Button"
        android:onClick="clickLesson4"
        android:layout_below="@+id/lesson3Button"
        android:layout_alignEnd="@+id/lesson3Button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo"
        android:id="@+id/demoButton"
        android:onClick="clickDemo"
        android:layout_below="@+id/lesson4Button"
        android:layout_alignEnd="@+id/lesson4Button"
        android:layout_alignParentStart="true" />

</RelativeLayout>
